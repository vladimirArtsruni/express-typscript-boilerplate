{
    "compilerOptions": {
        "outDir": "./build",
        "allowJs": false,
        "target": "es2017",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "strict": true,
        "jsx": "react",
        "importHelpers": true,
        "lib": [ "es2017", "dom" ],
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "typeRoots": [
            "src/types",
            "node_modules/@types"
        ]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"],

}
